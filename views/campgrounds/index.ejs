<% include ../partials/header %>


<div class="container">
  <header class="jumbotron">
    <div>
      <h1>Welcome to Yelp Camp</h1>
      <p>View our selected campgrounds from all over the Alberta!</p>
      <p>
        <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
      </p>
    </div>
  </header>

  <div class="row">
    <div class="col-lg-12">
      <h3>Our most popular campgrounds</h3>
    </div>
  </div>

  <div class="row text-center" style="display:flex; flex-wrap: wrap;">
    <% campgrounds.forEach(function(item) {%>
      <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
        <img src="<%=item.image%>">
          <div class="caption">
            <h4><%= item.name %></h4>
          </div>
          <p>
            <a href="/campgrounds/<%=item._id%>" class="btn btn-primary">More Info</a>
          </p>
        </div>
      </div>
    <%});%>
  </div>



</div>

<% include ../partials/footer %>